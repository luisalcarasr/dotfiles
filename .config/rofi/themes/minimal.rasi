configuration {
  font: "Cantarell Bold 11";

  drun {
    display-name: ">";
  }

  run {
    display-name: ">";
  }

  window {
    display-name: ">";
  }

  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;

  bg: #000000;
  bg-alt: #232323;
  fg: #FFFFFF;
  fg-alt: #424242;

  background-color: @bg;
  text-color: @fg;
}

window {
  transparency: "real";
  width: 35%;
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  children: [prompt, entry];
}

entry {
  padding: 16px 0;
}

prompt {
  padding: 16px;
}

listview {
  lines: 4;
}

element {
  children: [element-text];
}

element-text {
  padding: 8px 16px;
  text-color: @fg-alt;
}

element-text selected {
  text-color: @fg;
}
